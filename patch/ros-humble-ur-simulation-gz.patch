+# Install conda activation scripts to set required Gazebo environment variables
+# These scripts will be sourced when the conda environment is activated
+if(UNIX)
+  # Create activation script
+  file(WRITE "${CMAKE_CURRENT_BINARY_DIR}/ur_simulation_gz_activate.sh"
+"#!/bin/bash
+# Set Gazebo system plugin paths for ur_simulation_gz
+if [ -z \"\${IGN_GAZEBO_SYSTEM_PLUGIN_PATH_BACKUP}\" ]; then
+    export IGN_GAZEBO_SYSTEM_PLUGIN_PATH_BACKUP=\"\${IGN_GAZEBO_SYSTEM_PLUGIN_PATH}\"
+fi
+if [ -z \"\${GZ_SIM_SYSTEM_PLUGIN_PATH_BACKUP}\" ]; then
+    export GZ_SIM_SYSTEM_PLUGIN_PATH_BACKUP=\"\${GZ_SIM_SYSTEM_PLUGIN_PATH}\"
+fi
+export IGN_GAZEBO_SYSTEM_PLUGIN_PATH=\"\${CONDA_PREFIX}/lib:\${IGN_GAZEBO_SYSTEM_PLUGIN_PATH}\"
+export GZ_SIM_SYSTEM_PLUGIN_PATH=\"\${CONDA_PREFIX}/lib:\${GZ_SIM_SYSTEM_PLUGIN_PATH}\"
+")
+  
+  # Create deactivation script  
+  file(WRITE "${CMAKE_CURRENT_BINARY_DIR}/ur_simulation_gz_deactivate.sh"
+"#!/bin/bash
+# Restore original Gazebo system plugin paths
+if [ -n \"\${IGN_GAZEBO_SYSTEM_PLUGIN_PATH_BACKUP}\" ]; then
+    export IGN_GAZEBO_SYSTEM_PLUGIN_PATH=\"\${IGN_GAZEBO_SYSTEM_PLUGIN_PATH_BACKUP}\"
+    unset IGN_GAZEBO_SYSTEM_PLUGIN_PATH_BACKUP
+fi
+if [ -n \"\${GZ_SIM_SYSTEM_PLUGIN_PATH_BACKUP}\" ]; then
+    export GZ_SIM_SYSTEM_PLUGIN_PATH=\"\${GZ_SIM_SYSTEM_PLUGIN_PATH_BACKUP}\"
+    unset GZ_SIM_SYSTEM_PLUGIN_PATH_BACKUP
+fi
+")
+endif()
